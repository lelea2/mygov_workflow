<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kdao.mygov_workflow.SigninActivity"
    android:background="#192630">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/loginpic"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_selector"
            android:fontFamily="Helvetica Neue"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:textColor="@color/colorTextMainColor"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="@color/colorTextHint"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_selector"
            android:fontFamily="Helvetica Neue"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:textColor="@color/colorTextMainColor"
            android:textColorHighlight="@color/colorTextMainColor"
            android:textColorHint="@color/colorTextHint"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btnLogin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorRed"
            android:onClick="loginUser"
            android:text="LOGIN"
            android:textColor="@color/colorTextWhite"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
